javascript:
  $(document).ready(function(){
    $('.open-modal-login').on("click", function(){
      $('#login').find('#forgot-password-sent').removeClass('active')
      $('#login').find('#forgot-password').removeClass('active')
      $('#login').find('#login-details').addClass('active')
      $('#login').modal('show')
    })
    $('.specialty').selectpicker({
      style: 'btn-default',
      size: 12,
      title: 'Select Specialty'
    });
    $('.suburb').selectpicker({
      style: 'btn-default',
      size: 12,
      title: 'Select Suburb of Principal Practice'
    });
    $('.language').selectpicker({
      style: 'btn-default btn-lg',
      size: 12,
      title: 'Select language'
    });
    $('.state').selectpicker({
      style: 'btn-default',
      size: 12,
      title: 'Select State'
    });
    $('#myTabs a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
    })
  })
