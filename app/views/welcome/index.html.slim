              .col-md-6.m-b-10
                input.form-control name="sur_name" placeholder="Surname" tabindex="5" type="text" value="" /
              .col-md-6.m-b-10
                input.form-control autocomplete="off" name="email" placeholder=("Email address") tabindex="6" type="text" value="" /
              .col-md-6.m-b-10
                input.form-control name="password" placeholder="Password" tabindex="7" type="password" /
              .col-md-6.m-b-10
