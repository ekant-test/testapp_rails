.container-fluid.body
  .row
    .col-lg-8.col-lg-offset-2.col-md-12
      h4.sub-header
        | NOMEN ADMIN
      = render partial: "layouts/admin/header_tab"
      .panel.b-t-none.b-r-t-none
        .panel-body
          = render partial: "layouts/common/notice"
          .form-inline.pull-right
            = search_form_for [:admin, @q] do |f|
              = f.search_field :name_cont, class: 'form-control input-sm', style: "width:150px;", placeholder: "Search"
              = f.submit "Search", class: 'btn btn-default btn-sm'
              = link_to 'Create', new_admin_language_path, method: :get, class: 'btn btn-green btn-sm'
          h4
            | Translations
          .clearfix
          .line.line-dashed
          .clearfix
          .table-responsive
            table.table.small
              thead
                tr
                  th[width="180"]
                    | Language
                  th
                    | Updated
                  th
                    | Status
                  th
                    | Delete
                  th
                    | Action
              tbody
                - @languages.each do |language|
                  tr
                    td
                      = link_to language.name, admin_language_path(language)
                    td
                      = language.updated_at
                    td
                      = language.status ? 'Published' : 'Unpublished'
                    td
                      = link_to "Delete", admin_language_path(language), method: :delete, class: 'text-danger', data: {confirm: "Are you sure?"}
                    td
                      - if language.status
                        = link_to "Unpublish", admin_language_change_status_path(language), method: :get, class: 'text-success'
                      - else
                        = link_to "Publish", admin_language_change_status_path(language), method: :get, class: 'text-success'

