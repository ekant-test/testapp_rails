.container-fluid.body
  .row
    .col-lg-8.col-lg-offset-2.col-md-12
      h4.sub-header
        | NOMEN ADMIN
      = render partial: "layouts/admin/header_tab"
      .panel.b-t-none.b-r-t-none
        .panel-body
          = render partial: "layouts/common/notice"
          .form-inline.pull-right
            = search_form_for [:admin, @q] do |f|
              = f.search_field :name_or_native_name_cont, class: 'form-control input-sm', style: "width:150px;", placeholder: "Search"
              = f.submit "Search", class: 'btn btn-default btn-sm'
          h4
            | Recordings
          .clearfix
          .line.line-dashed
          .clearfix
          .table-responsive
            table.table.small
              thead
                tr
                  th[width="180"]
                    | Name
                  th
                    | Native Language
                  th
                    | Language
                  th
                    | User
                  th
                    | Type
                  th
                    | Voted
                  th
                    | Reported
                  th
                    | Delete
                  th
                    | Play
              tbody
                - @recordings.each do |rc|
                  tr
                    td
                      = rc.name
                    td
                      = rc.native_name
                    td
                      = rc.language
                    td
                      = rc.user.name
                    td
                      = rc.record_type
                    td
                      = rc.rates.votes.count
                    td
                      = rc.rates.reports.count
                    td
                      = link_to "Delete", admin_recording_path(rc), method: :delete, class: 'text-danger', data: {confirm: "Are you sure?"}
                    td
                      = link_to "Play", "javascript:;", method: :delete, class: 'text-success jplay', data: { audio: rc.record_file.url.to_s }
