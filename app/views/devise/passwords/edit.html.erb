<div class="container-fluid body">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-offset-3 text-center">
          <div class="box">
            <div class="col-sm-12">
              <%= image_tag "HTML/images/icon-lock.png", width: "100"%>
              <h3>Reset your password</h3>
              <p class="m-b-30">Please create a new password and confirm new password below.</p>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= devise_error_messages! %>
                <%= f.hidden_field :reset_password_token %>
                <div class="row">
                  <div class="form-group">
                    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', autocomplete: "off", placeholder: "New Password" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', autocomplete: "off", placeholder: "Confirm New Password" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Update", class: 'btn btn-green btn-block' %>
                  </div>
                  <div class="form-group">
                  <%= link_to "Go back to home page", root_path, class: "btn btn-default btn-block" %>
                </div>
                </div>
                    <% end %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>